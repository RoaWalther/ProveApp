<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.proveapp.proveapp.Activity.ProductosTenderos">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Seleccione un Producto"
        android:textSize="30sp"
        android:textColor="#000000"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:isScrollContainer="false"
            android:layout_marginTop="50dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:enabled="false"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">



                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="300dp"
                    android:enabled="false">

                    <Spinner
                        android:id="@+id/productos"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_weight="2"
                         />
                    <Spinner
                        android:id="@+id/productos1"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_weight="2"
                        android:layout_below="@+id/productos"
                        />
                    <Spinner
                        android:id="@+id/productos2"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_weight="2"
                        android:layout_below="@+id/productos1"
                        />
                    <Spinner
                        android:id="@+id/productos3"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_weight="2"
                        android:layout_below="@+id/productos2"
                        />
                    <Spinner
                        android:id="@+id/productos4"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_weight="2"
                        android:layout_below="@+id/productos3"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="300dp"
                    android:enabled="false">

                    <EditText
                        android:id="@+id/precios"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:textColor="#000000"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/precios1"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:layout_below="@+id/precios"
                         android:enabled="false" />

                    <EditText
                        android:id="@+id/precios2"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:inputType="number"
                        android:enabled="false"
                        android:layout_below="@+id/precios1"/>

                    <EditText
                        android:id="@+id/precios3"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_below="@+id/precios2"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:enabled="false"
                        android:inputType="number" />
                    <EditText
                        android:id="@+id/precios4"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:enabled="false"
                        android:layout_below="@+id/precios3"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="300dp"
                    android:enabled="false">

                    <EditText
                        android:id="@+id/cantidad"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:hint="Cantidad"/>
                    <EditText
                        android:id="@+id/cantidad1"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:hint="Cantidad"
                        android:inputType="number"
                        android:layout_below="@+id/cantidad" />
                    <EditText
                        android:id="@+id/cantidad2"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:hint="Cantidad"
                        android:layout_below="@+id/cantidad1"/>
                    <EditText
                        android:id="@+id/cantidad3"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:hint="Cantidad"
                        android:layout_below="@+id/cantidad2"/>
                    <EditText
                        android:id="@+id/cantidad4"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:hint="Cantidad"
                        android:layout_below="@+id/cantidad3"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/Total"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:text="Total: "
                android:inputType="number"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/etTotal"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:inputType="number"
                android:textSize="30dp"
                android:hint="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnVerPrecio"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/custom_secundary_button"
                android:gravity="center"
                android:layout_weight="1"
                android:onClick="verPrecio"
                android:text="Ver Precio"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnRegistrarseTendero"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/custom_secundary_button"
                android:gravity="center"
                android:layout_weight="1"
                android:onClick="calcular"
                android:text="calcular"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
